<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Tema Base de la Aplicación (Modo Noche) - Mismo estilo que el de día -->
    <style name="Theme.VoidChat" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Color Primario de la Marca -->
        <item name="colorPrimary">@color/cream_primary</item>
        <item name="colorPrimaryVariant">@color/cream_primary_variant</item>
        <item name="colorOnPrimary">@color/white</item>

        <!-- Color Secundario de la Marca -->
        <item name="colorSecondary">@color/cream_accent</item>
        <item name="colorSecondaryVariant">@color/cream_accent</item>
        <item name="colorOnSecondary">@color/white</item>

        <!-- Color de Fondo de la aplicación -->
        <item name="android:colorBackground">@color/background_cream</item>

        <!-- Color de la Barra de Estado -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
    </style>
</resources>
