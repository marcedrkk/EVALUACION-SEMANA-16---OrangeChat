<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context=".ChatActivity">

    <!-- CAPA 1:  imagen de fondo de estrellas -->
    <ImageView
        android:id="@+id/chat_background_image"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/stars" />

    <!-- CAPA 2: Un tinte crema semitransparente para dar el tono elegante y asegurar legibilidad -->
    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#A6F5F5DC" /> <!-- Beige/Crema -->
-
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar_chat"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:layout_alignParentTop="true"
        android:background="#FFCB7F"
        app:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light" />

    <LinearLayout
        android:id="@+id/chatContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_below="@id/toolbar_chat">

        <!-- Lista de mensajes -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerChat"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:padding="8dp"/>

        <!-- Barra para escribir el mensaje (rediseñada para el estilo crema) -->
        <LinearLayout
            android:id="@+id/inputBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="8dp"
            android:gravity="center_vertical"
            android:background="@android:color/transparent"> <!-- Transparente para ver el fondo principal -->

            <EditText
                android:id="@+id/editMsg"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:minHeight="48dp"
                android:hint="Escribe un mensaje..."
                android:textColor="#4D4D4D"
                android:textColorHint="#994D4D4D"
                android:background="@drawable/voidchat_fieldi"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"/>

            <!-- Cambiado a ImageButton para un look más limpio -->
            <ImageButton
                android:id="@+id/btnSend"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@android:drawable/ic_menu_send"
                android:background="@drawable/bubble_send"
                android:layout_marginStart="8dp"
                android:contentDescription="Enviar mensaje"/>
        </LinearLayout>

        <!-- Botones MQTT (Ocultos para no estorbar) -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="6dp"
            android:visibility="gone">

            <Button
                android:id="@+id/btnMqttConnect"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:text="Conectar MQTT" />

            <Button
                android:id="@+id/btnMqttDisconnect"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:layout_marginStart="10dp"
                android:text="Desconectar MQTT" />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>

