<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Color de fondo para los mensajes que recibes -->
    <solid android:color="#FFE4B5" /> <!-- Melocotón claro -->

    <!-- Bordes redondeados con una esquina menos pronunciada para dar dirección -->
    <corners
        android:topLeftRadius="8dp"
        android:topRightRadius="24dp"
        android:bottomLeftRadius="24dp"
        android:bottomRightRadius="24dp" />

    <!-- Un borde muy sutil y elegante en un tono rosa pálido -->
    <stroke android:width="1.5dp" android:color="#4DBC8F8F" /> <!-- RosyBrown translúcido -->

    <!-- Espaciado interno para que el texto respire -->
    <padding
        android:left="14dp"
        android:top="10dp"
        android:right="14dp"
        android:bottom="10dp"/>

</shape>
